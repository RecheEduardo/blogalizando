<div class="p-4">
    <h4 class="fst-italic"><%= t('articles.archives')%></h4>
    <ol class="list-unstyled mb-0">
        <% @archives.each do | timestamp, count | %>
            <li>
                <%= link_to "#{timestamp.capitalize} (#{count})", articles_path(month_year: timestamp), 
                class: " #{'category-active' if timestamp == params[:timestamp]}" %>
            </li>
        <% end %>
    </ol>
</div>