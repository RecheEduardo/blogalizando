<div class="card my-3">
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <p><%= comment.body %></p>
            <hr>
            <div class="d-flex justify-content-between">
                <div>
                    <strong class="text-secondary small">
                        <i class="fa-solid fa-user px-2"></i>
                        <cite title="Source Title" style="text-decoration: underline;">
                            <%= comment.author_name %>
                        </cite>
                        on <%= m_d_comma_y(comment.created_at) %> 
                    </strong>
                </div>
                <div>
                    <% if current_user && (current_user.admin? || current_user.id == comment.user_id) %>
                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-<%= comment.id %>">
                            Delete comment
                        </button>
                    <% end %>
                </div>
            </div>
        </blockquote>
    </div>
</div>

<!-- Modal de exclusÃ£o -->
<div class="modal fade" id="exampleModal-<%= comment.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete comment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Do you really want to delete this comment?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn bg-gradient bg-secondary text-light" data-bs-dismiss="modal">No</button>
                <%= link_to "Yes", article_comment_path(@article, comment), method: :delete, class: "btn bg-gradient bg-danger text-light" %>
            </div>
        </div>
    </div>
</div>